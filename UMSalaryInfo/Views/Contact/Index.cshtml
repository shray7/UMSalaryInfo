<div style="width:100%;background-color:rgba(255, 255, 255, 0.85);border-radius:25px;">
    <div style="width:300px; margin:0 auto; padding-bottom:10px; padding-top:10px;">
        <form id="contact_form" action="Contact/SendMail" method="Post" style="align-content:center">
            <div class="row">
                <label for="name">Name:</label><br />
                <input id="name" class="input" name="name" type="text" value="" size="30" /><br />
            </div>
            <div class="row">
                <label for="email">Email:</label><br />
                <input id="email" class="input" name="fromEmail" type="text" value="" size="30" /><br />
            </div>
            <div class="row">
                <label for="message">Message:</label><br />
                <textarea id="message" class="input" name="message" rows="7" cols="30"></textarea><br />
            </div>
            <input id="submit_button" type="submit" value="Send email" />
        </form>
    </div>
</div>
